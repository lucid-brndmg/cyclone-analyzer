{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "files": {
    "ignore": [
      "./src/generated/**"
    ]
  },
  "linter": {
		"enabled": true,
		"rules": {
          "suspicious": {
            "noGlobalIsFinite": "off",
            "noGlobalIsNan": "off",
            "noPrototypeBuiltins": "off",
            "noAssignInExpressions": "off"
          },
          "style": {
            "useSingleVarDeclarator": "off",
            "useNumberNamespace": "off",
            "useTemplate": "off"
          },
          "complexity": {
            "useLiteralKeys": "off",
            "noForEach": "off"
          },
          "recommended": true
		}
	}
}
